  },
  "buildDependencies": {
    "webpack": "^5.88.0",
    "html-webpack-plugin": "^5.5.0",
    "babel-loader": "^9.1.0",
    "@babel/preset-react": "^7.22.0",
    "css-loader": "^6.8.0",
    "style-loader": "^3.3.0"
