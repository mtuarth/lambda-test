{
  "templateName": "simple-business",
  "templateVersion": "1.0.0",
  "description": "Template React simples para sites corporativos",
  "customizable": {
    "siteName": "Nome da empresa",
    "siteTitle": "Título principal do site",
    "siteDescription": "Descrição do negócio",
    "primaryColor": "Cor principal do tema",
    "secondaryColor": "Cor secundária do tema",
    "services": "Lista de serviços oferecidos",
